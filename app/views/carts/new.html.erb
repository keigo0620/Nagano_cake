<div class= "container">
  <h4>購入情報入力</h4>



<h2>支払い方法</h2><br>

<%= form_with(model: @order, local: true) do |form| %>
  <%= form.radio_button :payment_methods, :Credit %>
  <%= form.label :payment_methods, "クレジットカード", {value: :Credit, style: "display: inline-block;"} %><br>
  <%= form.radio_button :payment_methods, :Bank %>
  <%= form.label :payment_methods, "銀行振込", {value: :Bank, style: "display: inline-block;"} %>
<% end %>

  <h3>お届け先</h3>



  <%= form_with(model: @order, local: true) do |form| %>

  <%= form.radio_button :payment_methods, :Credit %>
  　　 <p>〒<span><%= @user.postal_code %>
      <%= @user.user_address %><br>
      <%= @user.family_name_kanji %>
        <%= @user.first_name_kanji %></span></p>

  <%= form.radio_button :payment_methods, :Bank %><br>
  <%= form.select :job_id, [ ["登録配送先",1], ["登録配送先", 2], ["登録配送先", 3 ] ,["登録配送先", 4], ["登録配送先", 5], ["登録配送先", 6] ], prompt: "登録配送先" %><br>

  <%= form.radio_button :payment_methods, :Bank %>
  <p>新規登録先フォーム</p>
  <% end %>

  <%= link_to '確認画面に進む', new_order_path(current_user), class: "btn btn-primary" %>