<div class="container">
<h1>商品説明</h1>
           <table class="table">
　　　　　　　　　<!--カート送信ボタンのコード -->
            <tr>
              <div class="col-md-4">
            	<td>
                 <div><%= attachment_image_tag @product, :image, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: '200x200' %></div>
              </td>
              </div>
              <div class="col-md-8">
                  <td><%= @product.product_name %></td>
                  <td><%= @product.product_description %></td>
                  <td><%= @product.tax_excluded %></td>
                <%= form_for( Cart.new(product_id: @product.id)) do|f|  %>
                   <td><%= f.select :product_number, [*1..100] ,class:"form-control" %></td>
                   <%= f.hidden_field :product_id %>
                   <td><%= f.submit "カートに入れる", class: "btn btn-primary" %></td>
                <% end %>
              </div>
           </tr>
           </table>
</div>